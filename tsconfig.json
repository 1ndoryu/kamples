// tsconfig.json (Sugerencia de mejora)
{
    "compilerOptions": {
        // CAMBIO: 'esnext' es más moderno y común en proyectos Next.js
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true, // Buena práctica
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        // CAMBIO: Simplificado para mayor claridad, funcionalmente es lo mismo
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
